spec {
  README.md {
    header_image: "https://github.com/jimthunderbird/rocat/blob/master/rocat.jpg"
    
    introduction {
      description: "ROCAT is an application framework that runs on multiple AI coding agents"
      supported_agents: ["copilot-cli", "gemini-cli", "claudecode"]
    }
    
    rocat_components {
      | Component | Description |
      | Role | Defines the role or persona the AI agent should assume |
      | Objective | Specifies the goal or outcome to achieve |
      | Constraint | Sets boundaries and limitations for task execution |
      | Application Specification | Details specific requirements and features |
      | Tasks | Lists concrete actions to perform |
    }
    
    usage {
      command: "sh rocat.sh <rocat_name>"
      example: "sh rocat.sh sudoku_spa_app"
      
      custom_scripts {
        description: "Run custom scripts inside of a rocat"
        command: "sh rocat.sh <rocat_name> <script_name>"
        example: "sh rocat.sh sudoku_spa_app runapp_hotreload"
      }
    }
    
    features_table {
      | Feature | Description |
      | Multi-Agent Support | Works with various AI coding agents |
      | Structured Approach | Organizes AI tasks using ROCAT framework |
      | Reusable Templates | Each ROCAT can be executed repeatedly |
      | Task Automation | Automates complex development workflows |
    }
    
    curly_prompt_language {
      description: "Curly bracket-based syntax for hierarchical logic"
      example: "app_spec { html { component.abc { div.id:\"abc\" { text: \"...\" } } } }"
      
      benefits_table {
        | Benefit | Description |
        | Hierarchical Clarity | Nested structure makes relationships explicit |
        | Agent-Friendly | Easy for AI agents to parse |
        | Concise Syntax | Reduces verbosity while maintaining readability |
        | Flexible Notation | Supports properties and nested components |
      }
    }
    
    editor_integration {
      description: "Works seamlessly with any text editor for vibe coding"
      
      benefits_table {
        | Benefit | Description |
        | Editor Freedom | Use favorite editor with customizations |
        | Vibe Coding | Write prompts in comfortable environment |
        | File-Based Workflow | Plain text files for versioning |
        | Context Switching | Switch between code and prompts seamlessly |
        | Collaboration Ready | Share using version control tools |
        | Task Visibility | View complete history of completed tasks |
      }
    }
    
    spec_driven_development {
      description: "Maintains up-to-date specification through automated workflow"
      
      key_advantages_table {
        | Advantage | Description |
        | Living Documentation | Specification evolves with codebase, eliminating drift |
        | Iterative Refinement | Task completion updates spec, creating feedback loop |
        | Single Source of Truth | App spec remains authoritative reference |
        | Audit Trail | Version-controlled spec shows application evolution |
        | AI-Friendly Evolution | Agents reference updated spec for subsequent tasks |
      }
    }
  }
}
